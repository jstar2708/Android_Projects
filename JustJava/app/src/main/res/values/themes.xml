<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustJava" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#64FFDA</item>
        <!-- Status bar color. -->
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:colorAccent">#FF7043</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">#00BFA5</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="HeaderText" >
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomText" >
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#4527A0</item>
    </style>

</resources>